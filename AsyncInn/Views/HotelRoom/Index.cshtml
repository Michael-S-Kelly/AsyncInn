@model IEnumerable<AsyncInn.Models.HotelRoom>

@{ 
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Rooms Assigned to Hotel</h1>

<p>
    <a asp-action="Create">Add Room to Hotel</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetFriendly)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Hotel.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetFriendly)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { })  |
                    @Html.ActionLink("Details", "Details", new { })  |
                    @Html.ActionLink("Delete", "Delete", new { })
                </td>
            </tr>
        }
    </tbody>
</table>