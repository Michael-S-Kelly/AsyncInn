@model AsyncInn.Models.RoomAmenities

@{ 
    ViewData["Title"] = "Delete";
}

<h1>Remove Amenities from Room</h1>

<h3>Are you sure you wish to remove amenities from this room?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amenities)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amenities.ID)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomID" />
        <input type="hidden" asp-for="AmenitiesID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
